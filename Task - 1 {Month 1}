# contact_book.py

def add_contact():
    name = input("Enter Name: ")
    phone = input("Enter Phone Number: ")
    email = input("Enter Email: ")

    with open("contacts.txt", "a") as file:
        file.write(f"{name},{phone},{email}\n")

    print("‚úÖ Contact added successfully!\n")


def view_contacts():
    try:
        with open("contacts.txt", "r") as file:
            contacts = file.readlines()
            if not contacts:
                print("üì≠ No contacts found.\n")
                return
            print("üìí Your Contacts:")
            print("-" * 40)
            for contact in contacts:
                name, phone, email = contact.strip().split(",")
                print(f"Name : {name}\nPhone: {phone}\nEmail: {email}")
                print("-" * 40)
    except FileNotFoundError:
        print("‚ö†Ô∏è Contact file not found. Add a contact first.\n")


def search_contact():
    search_name = input("üîç Enter name to search: ").lower()
    found = False

    try:
        with open("contacts.txt", "r") as file:
            for line in file:
                name, phone, email = line.strip().split(",")
                if search_name in name.lower():
                    print("\n‚úÖ Contact Found:")
                    print("-" * 40)
                    print(f"Name : {name}\nPhone: {phone}\nEmail: {email}")
                    print("-" * 40)
                    found = True
        if not found:
            print("‚ùå Contact not found.\n")
    except FileNotFoundError:
        print("‚ö†Ô∏è Contact file not found. Add a contact first.\n")


def main():
    while True:
        print("\nüìá Contact Book Menu")
        print("1. Add Contact")
        print("2. View All Contacts")
        print("3. Search Contact")
        print("4. Exit")

        choice = input("Enter your choice (1-4): ")

        if choice == "1":
            add_contact()
        elif choice == "2":
            view_contacts()
        elif choice == "3":
            search_contact()
        elif choice == "4":
            print("üëã Exiting Contact Book. Goodbye!")
            break
        else:
            print("‚ùó Invalid choice. Please enter 1‚Äì4.\n")


if __name__ == "__main__":
    main()
